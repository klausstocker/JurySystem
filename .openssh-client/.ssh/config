Host tunnel-forwarder
  Hostname yourdomain.com
  User username
  Port 2222
  IdentityFile ~/.ssh/id_rsa
  RemoteForward  6666 php-nginx:8080
  RemoteForward  6667 php-nginx:8080
  # RemoteForward  9999 node-red:1880
  # RemoteForward  5555 192.168.0.11:8000  # to any device in local network e.g. microcontroller
  # LocalForward 8888 localhost:8888  # example

Host *
  StrictHostKeyChecking yes  # could be improved with ssh-keyscan?
  UserKnownHostsFile ~/.ssh/known_hosts
  ServerAliveInterval 15
  ServerAliveCountMax 2
  ExitOnForwardFailure yes
  # LogLevel=ERROR  # maybe
